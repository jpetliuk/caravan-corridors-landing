                <div class="absolute -inset-4 bg-indigo-500/20 blur-3xl rounded-[3rem] -z-10"></div>
                
                <img
                  src="/app-screenshot.png"
                  alt="Caravan Corridors Database Interface"
                  class="w-full rounded-md shadow-2xl ring-1 ring-slate-900/10 bg-white/5"
                />
            </div>
        </div>
    </div>
</section>
